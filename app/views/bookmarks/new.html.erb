<h1>New Bookmark</h1>
<%= form_with model: @bookmark, url: list_bookmarks_path(@list), local: true do |f| %>
  <%= f.label :movie_id, "Movie" %>
  <%= f.collection_select :movie_id, Movie.all, :id, :title %>

  <%= f.label :comment %>
  <%= f.text_area :comment %>

  <%= f.submit "Save Bookmark" %>
<% end %>
